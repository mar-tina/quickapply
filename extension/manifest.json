{
  "name": "Quick Apply",
  "version": "1.0",
  "description": "Easiest way to apply and keep track of your job applications",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "interview.svg",
    "default_popup": "popup.html",
    "default_title": "Quick Apply"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ]
}
